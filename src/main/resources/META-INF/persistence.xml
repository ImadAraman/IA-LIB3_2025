<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    
    <persistence-unit name="libraryPU" transaction-type="RESOURCE_LOCAL">
        <description>Library Management System Persistence Unit</description>
        
        <!-- Entity classes -->
        <class>edu.najah.library.domain.Book</class>
        <class>edu.najah.library.domain.Admin</class>
        <class>edu.najah.library.domain.User</class>
        
        <!-- Database connection properties will be set programmatically -->
        <properties>
            <!-- Connection Pool Settings (HikariCP) -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            
            <!-- Hibernate Properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            
            <!-- Connection Pool Configuration (HikariCP auto-detected) -->
            <property name="hibernate.hikari.minimumIdle" value="5"/>
            <property name="hibernate.hikari.maximumPoolSize" value="10"/>
            <property name="hibernate.hikari.idleTimeout" value="300000"/>
            <property name="hibernate.hikari.maxLifetime" value="600000"/>
        </properties>
    </persistence-unit>
    
</persistence>

